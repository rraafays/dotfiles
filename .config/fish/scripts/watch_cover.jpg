#!/usr/bin/env fish

function copy_art
    set cover_path ~/Music/(mpc --format %file% | head -n 1 | sed 's/[^/]*$//')/cover.jpg
    if test -n "$cover_path"
        cp $cover_path ~/cover.jpg
    else
        echo "no cover art found"
    end
end

while true
    copy_art
    mpc idle >/dev/null
end
