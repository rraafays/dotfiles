#!/usr/bin/env bash

windows=$(/run/current-system/sw/bin/tmux list-windows -F "#{window_name}: #{pane_current_path}" 2>/dev/null || echo "")

selected=$(echo "$windows" | /run/current-system/sw/bin/fzf --tmux --prompt="list: " --print-query | /run/current-system/sw/bin/tail -1)

if [ -z "$selected" ]; then
    exit 0
fi

if echo "$windows" | /run/current-system/sw/bin/rg -qFx "$selected"; then
    window_index=$(echo "$selected" | /run/current-system/sw/bin/cut -d':' -f1)
    /run/current-system/sw/bin/tmux select-window -t ":$window_index"
else
    if ! /run/current-system/sw/bin/tmux select-window -t "$selected" 2>/dev/null; then
        exit 0
    fi
fi
