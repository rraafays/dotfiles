# general settings
auto-reload yes
max-items 50

# externel browser
browser "w3m %u"

# unbind keys
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# solarized
color background                         default default
color listnormal                         color7  default
color listnormal_unread                  default default
color listfocus                          color9  default reverse
color listfocus_unread                   color9  default reverse
color info                               default default
color article                            default default
color end-of-text-marker                 color0  default

# highlights
highlight article "^(Feed):.*$"          color9  default bold
highlight article "^(Title):.*$"         color9  default bold
highlight article "^(Author):.*$"        color7  default
highlight article "^(Date):.*$"          color7  default
highlight article "^(Link):.*$"          color7  default
highlight article "https?://[^ ]+"       color12 default
highlight article "\\[image\\ [0-9]+\\]" color11 default
