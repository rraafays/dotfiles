alias vi nvim
alias ls lsd
alias grep rg
alias cat bat
alias py python3
alias transmission transmission-remote
alias fd "fd -u"
alias tree "ls --tree"
alias qr "qrencode -t UTF8 -m 2"
alias bat "bat --theme gruvbox-dark"
alias onefetch "onefetch --true-color never"
alias gitfetch "onefetch --no-color-palette --no-art --no-title --text-colors 0 0 0 5 5 15"
alias transmission-watch "watch -n 1 'transmission-remote -l'"
alias im "kitty +kitten icat --align left"
alias imv "mpv --loop --window-maximized --no-terminal --no-input-cursor"
alias play "mpv --no-audio-display --no-input-cursor"
alias scrcpy "scrcpy --shortcut-mod lctrl --disable-screensaver"
