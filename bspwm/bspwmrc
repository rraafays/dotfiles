#! /bin/fish

xrdb ~/.Xresources &
xsetroot -cursor_name left_ptr &
pgrep -x sxhkd > /dev/null || sxhkd &

bspc config border_width 2
bspc config window_gap 20

if string match -q "dark" $theme
  bspc config focused_border_color "#EBDBB2"
  bspc config normal_border_color "#A89983"
  feh --bg-scale ~/.config/wallpapers/gruvbox-dark.jpeg
end

if string match -q "light" $theme
  bspc config focused_border_color "#3C3836"
  bspc config normal_border_color "#7C6F64"
  feh --bg-scale ~/.config/wallpapers/gruvbox-light.jpeg
end

bspc rule -a Zathura state=tiled
