.shell powershell

alt + o                 : taskkill.exe /f /im whkd.exe && Start-Process.exe whkd -WindowStyle hidden && Start-Process.exe komorebi -WindowStyle hidden

# spawn terminal
ctrl + return                 : start wsltty

# maximise window
ctrl + f : komorebic toggle-maximize

# Focus windows
ctrl + h                 : komorebic focus left
ctrl + j                 : komorebic focus down
ctrl + k                 : komorebic focus up
ctrl + l                 : komorebic focus right

# Move windows
ctrl + shift + h         : komorebic move left
ctrl + shift + j         : komorebic move down
ctrl + shift + k         : komorebic move up
ctrl + shift + l         : komorebic move right

# Resize
# alt + oem_plus          : komorebic resize-axis horizontal increase
# alt + oem_minus         : komorebic resize-axis horizontal decrease
# alt + shift + oem_plus  : komorebic resize-axis vertical increase
# alt + shift + oem_minus : komorebic resize-axis vertical decrease

# Manipulate windows
ctrl + t                 : komorebic toggle-float

# Layouts
alt + x                 : komorebic flip-layout horizontal
alt + y                 : komorebic flip-layout vertical

# Workspaces
ctrl + 1                 : komorebic focus-workspace 0
ctrl + 2                 : komorebic focus-workspace 1
ctrl + 3                 : komorebic focus-workspace 2
ctrl + 4                 : komorebic focus-workspace 3
ctrl + 5                 : komorebic focus-workspace 4
ctrl + 6                 : komorebic focus-workspace 5
ctrl + 7                 : komorebic focus-workspace 6
ctrl + 8                 : komorebic focus-workspace 7
ctrl + 9                 : komorebic focus-workspace 8
ctrl + 0                 : komorebic focus-workspace 9

# Move windows across workspaces
ctrl + 1                 : komorebic move-to-workspace 0
ctrl + 2                 : komorebic move-to-workspace 1
ctrl + 3                 : komorebic move-to-workspace 2
ctrl + 4                 : komorebic move-to-workspace 3
ctrl + 5                 : komorebic move-to-workspace 4
ctrl + 6                 : komorebic move-to-workspace 5
ctrl + 7                 : komorebic move-to-workspace 6
ctrl + 8                 : komorebic move-to-workspace 7
ctrl + 9                 : komorebic move-to-workspace 8
ctrl + 0                 : komorebic move-to-workspace 9
