# reload bspwm & sxhkd
super + Escape
  bspc wm -r; \
  pkill -USR1 -x sxhkd

# terminal emulator (kitty)
super + shift + Return
  kitty

# application launcher
super + @space
  rofi -show drun

# close or kill window
super + {_,shift+}w
  bspc node -{c,k}

# set master
super + Return
  bspc node -s biggest.window

# focus or swap in given direction
super + {_,shift + }{Up,Right,Down,Left}
  bspc node -{f,s} {north,east,south,west}

